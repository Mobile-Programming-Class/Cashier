<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/ItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Customer"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="48dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/NumberOfItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Customer"
        android:layout_centerInParent="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Customer"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <View
        android:id="@+id/vDividerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/NumberOfItems"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/Customer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vDividerLine"
        android:text="TextView" />

    <TextView
        android:id="@+id/ItemLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Customer1"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="48dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/NumberOfItems1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Customer1"
        android:layout_centerInParent="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/Price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Customer1"
        android:layout_alignParentEnd="true"
        android:text="TextView" />
</RelativeLayout>

